---
import Layout from '@/layouts/Layout.astro';

import AboutMe from '@/components/AboutMe.astro';
import Badge from '@/components/Badge.astro';
import Briefcase from '@/components/icons/Briefcase.astro';
import CodeIcon from '@/components/icons/Code.astro';
import Experience from '@/components/Experience.astro';
import GitHubIcon from '@/components/icons/GitHub.astro';
import LinkedInIcon from '@/components/icons/LinkedIn.astro';
import MailIcon from '@/components/icons/Mail.astro';
import ProfileCheck from '@/components/icons/ProfileCheck.astro';
import Projects from '@/components/Projects.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import SocialPill from '@/components/SocialPill.astro';
---

<Layout
  title='Tomas Laus Portfolio - Web Developer with +1 year of experience'
  description='Hire Tomas Laus to create your web or mobile application. Web and Mobile Developer. Specialized in creating unique applications.'>
  <main class='px-4'>
    <SectionContainer class='py-28 pb-32' id="home">
      <img class='rounded-full size-12 mb-4' src='/tom.jpg' alt='tomas laus photo' />
      <h1
        class='text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10'>
        Hey, I'm Tom√°s <a
          href='https://linkedin.com/in/tomaslaus'
          target='_blank'
          rel='noopener'
          class='flex justify-center items-center hover:scale-105 transition'>
          <!-- <Badge>Available for work</Badge> -->
        </a>
      </h1>
      <h2 class='text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white'>
        <span>+1 year of experience.</span><span class='text-[#CBFF00] dark:text-[#CBFF00]'>
          Full Stack Developer</span
        >.<span class='text-sky-800 dark:text-sky-200'> From Argentina</span>.
        <span class='text-red-800 dark:text-red-200'
          >Specialized in creating unique applications.</span
        >
      </h2>

      <nav class='flex gap-4 mt-8 flex-wrap'>
        <SocialPill href='https://linkedin.com/in/tomaslaus'>
          <LinkedInIcon class='size-4 md:size-6' />
          LinkedIn
        </SocialPill>
        <SocialPill href='https://github.com/TomasLaus'>
          <GitHubIcon class='size-4 md:size-6' />
          GitHub
        </SocialPill>
        <SocialPill href='mailto:tomaslaus99@gmail.com'>
          <MailIcon class='size-4 md:size-6' />
          tomaslaus99@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id='experience'>
      <h2
        class='text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80'>
        <Briefcase class='size-7' />
        Work Experience
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id='projects'>
      <h2
        class='text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80'>
        <CodeIcon class='size-7' />
        Projects
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id='about-me'>
      <h2
        class='text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80'>
        <ProfileCheck class='size-7' />
        About me
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
